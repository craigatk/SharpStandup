
@model SharpStandup.Models.CreateReportResponse

@{
    ViewBag.Title = "Create Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Your Daily Report</h2>
    
<div class="row">
    <div class="col-md-8">
       @using (Html.BeginForm()) { 
           @Html.ValidationSummary()

            <div class="form-group">
                <label for="yesterdayReport">What you worked on yesterday</label>
                <textarea class="form-control" id="yesterdayReport" name="Yesterday"></textarea>
            </div>

            <div class="form-group">
                <label for="todayReport">What you plan to work on today</label>
                <textarea class="form-control" id="todayReport" name="Today"></textarea>
            </div>

            <div class="form-group">
                <label for="impedimentsReport">Anything that is blocking you</label>
                <textarea class="form-control" id="impedimentsReport" name="Impediments"></textarea>
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
       }
    </div>
</div>


